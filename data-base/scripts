CREATE DATABASE ConSentidoCo;

USE ConSentidoCo;
-- Tabla Usuario
CREATE TABLE Usuario (
    id_usuario INT PRIMARY KEY,
    contrasena VARCHAR(100),
    nombre VARCHAR(100),
    rol ENUM('Administrador', 'Usuario') NOT NULL
);

-- Tabla Categoria
CREATE TABLE Categoria (
    id_categoria INT PRIMARY KEY,
    nombre VARCHAR(100),
    descripcion TEXT
);

-- Tabla Producto
CREATE TABLE Producto (
    id_producto INT PRIMARY KEY,
    id_categoria INT,
    imagen VARCHAR(255),
    nombre VARCHAR(100),
    estado ENUM('Disponible', 'No disponible') NOT NULL,
    descripcion TEXT,
    precio DECIMAL(10,2),
    stock INT,
    FOREIGN KEY (id_categoria) REFERENCES Categoria(id_categoria)
);

-- Tabla Pedido
CREATE TABLE Pedido (
    id_pedido INT PRIMARY KEY,
    id_usuario INT,
    estado ENUM('En proceso', 'Enviado', 'Cancelado') NOT NULL,
    metodoPago VARCHAR(50),
    email VARCHAR(100),
    direccion TEXT,
    FOREIGN KEY (id_usuario) REFERENCES Usuario(id_usuario)
);

-- Tabla DetallePedido
CREATE TABLE DetallePedido (
    id_pedido INT,
    id_categoria INT,
    id_producto INT,
    id_detallePedido INT, -- Esto como parte de la PK es inusual
    cantidad INT,
    precio DECIMAL(10,2),
    descripcion TEXT,
    PRIMARY KEY (id_pedido, id_categoria, id_producto, id_detallePedido), -- PK muy compleja
    FOREIGN KEY (id_pedido) REFERENCES Pedido(id_pedido),
    FOREIGN KEY (id_categoria) REFERENCES Categoria(id_categoria),
    FOREIGN KEY (id_producto) REFERENCES Producto(id_producto)
);

-- Tabla Inventario
CREATE TABLE Inventario (
    id_categoria INT,
    id_producto INT,
    estado ENUM('En stock', 'Agotado') NOT NULL,
    descripcion TEXT,
    cantidad INT,
    precio DECIMAL(10,2),
    costo DECIMAL(10,2),
    PRIMARY KEY (id_categoria, id_producto),
    FOREIGN KEY (id_categoria) REFERENCES Categoria(id_categoria),
    FOREIGN KEY (id_producto) REFERENCES Producto(id_producto)
);
